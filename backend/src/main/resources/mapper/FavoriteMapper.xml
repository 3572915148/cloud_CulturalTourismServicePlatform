<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jingdezhen.tourism.mapper.FavoriteMapper">

    <!-- 查询收藏记录（包括已删除的） -->
    <!-- 用于处理重复收藏的情况 -->
    <select id="selectByUserAndProduct" resultType="com.jingdezhen.tourism.entity.Favorite">
        SELECT * 
        FROM favorite 
        WHERE user_id = #{userId} 
          AND product_id = #{productId} 
        LIMIT 1
    </select>

    <!-- 更新deleted状态（直接修改deleted字段，不受逻辑删除限制） -->
    <update id="updateDeletedStatus">
        UPDATE favorite 
        SET deleted = #{deleted}, 
            update_time = NOW() 
        WHERE id = #{id}
    </update>

</mapper>

